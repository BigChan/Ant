<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--目的：为dao接口方法提供sql语句配置-->
<mapper namespace="com.ant.dao.UserDetailDao">
    <select id="getUserDetailById" resultType="com.ant.entity.UserDetail">
        SELECT * FROM userdetail WHERE id = #{id}
    </select>
    <insert id="saveUserDetail">
        INSERT INTO userdetail VALUES (#{id},#{name},#{image},#{introduction},#{sex},#{net})
    </insert>
    <delete id="deleteUserDetailById">
        DELETE FROM userdetail where id = #{id}
    </delete>
    <update id="updateUserDetail">
        UPDATE userdetail SET name =#{name},image = #{image},introduction = #{introduction},sex = #{sex},net = #{net} WHERE id = #{id}
    </update>
</mapper>