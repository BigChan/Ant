<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--目的：为dao接口方法提供sql语句配置-->
<mapper namespace="com.ant.dao.ArticleDao">
    <select id="getArticleByTitle" resultType="com.ant.entity.Article">
        SELECT * FROM article WHERE title = #{title}
    </select>
    <select id="getArticleById" resultType="com.ant.entity.Article">
        SELECT * FROM article WHERE id = #{id}
    </select>
    <insert id="saveArticle">
        INSERT INTO article VALUES (NULL ,#{user_id},0,#{create_date},#{title},#{content})
    </insert>
    <delete id="deleteArticleById">
        DELETE FROM article where id = #{id}
    </delete>
    <update id="updateArticle">
        UPDATE article SET viewed = 0,create_date =#{create_date},title = #{title},content = #{content} WHERE id = #{id}
    </update>
</mapper>